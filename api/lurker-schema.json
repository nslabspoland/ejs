{
	"$schema": "http://json-schema.org/draft-07/schema",
	"$comment": "Schema dla integracji z portalem Lurker.pl",
	"description": "Schema dla integracji z portalem Lurker.pl",
	"properties": {
		"Key": {
			"type": "string",
			"description": "Key used for auth()",
			"maxLength": 128
		},
		"Pass": {
			"type": "string",
			"description": "Password for key",
			"minLength":16,
			"maxLength": 36
		},
		"WebSocket": {
			"description": "Socket na jakim jest nas≈Çuch API",
			"enum": ["api-dev.lurker.land", "api-stable.lurker.land", "localhost"]
		},
		"Request":{
			"properties": {
				"Type":{
					"enum": ["get", "post"]
				},
				"SameOrigin":{
					"type":"boolean"
				},
				"Encoded?":{
					"type":"boolean",
					"description": "is request encoded?"
				},
				"postBody":{
					"type":"string",
					"minLength":5,
					"maxLength": 255,
					"description": "Request body"
				},
				"Attachments":{
					"type":"boolean"
				}
			},
			"required": ["Type", "Encoded?", "Body"]
		},
		"Response":{
			"properties": {
				"Type":{
					"enum": ["post", "get"],
					"$comment": "Usually the same as request type"
				},
				"Encoded?":{
					"type":"boolean"
				},
				"Body":{
					"enum": ["200, OK", "40x", "50x"]
				}
			}
		}
	},
	"required": ["WebSocket"]
}
